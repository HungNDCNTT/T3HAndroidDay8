<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntentActivity">

    <Button
        android:id="@+id/btn_Bai3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Bài 3"
        app:layout_constraintEnd_toEndOf="@+id/btn_Bai2"
        app:layout_constraintStart_toStartOf="@+id/btn_Bai2"
        app:layout_constraintTop_toBottomOf="@+id/btn_Bai2" />

    <Button
        android:id="@+id/btn_Bai1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Bài 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Bai2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Bài 2"
        app:layout_constraintEnd_toEndOf="@+id/btn_Bai1"
        app:layout_constraintStart_toStartOf="@+id/btn_Bai1"
        app:layout_constraintTop_toBottomOf="@+id/btn_Bai1" />
</androidx.constraintlayout.widget.ConstraintLayout>